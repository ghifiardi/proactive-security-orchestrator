{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Child Agent Security Finding Schema",
  "type": "object",
  "properties": {
    "finding": {
      "type": "string",
      "description": "Concise security finding or vulnerability"
    },
    "evidence": {
      "type": "array",
      "description": "Array of code locations and references",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to repository root"
          },
          "lines": {
            "type": "string",
            "description": "Line range in format 'L100-L145' or single line 'L50'"
          },
          "why_relevant": {
            "type": "string",
            "description": "Why this code location is relevant to the finding"
          },
          "code_snippet": {
            "type": "string",
            "description": "Optional: â‰¤2 lines of actual code (for clarity only)"
          }
        },
        "required": ["path", "lines", "why_relevant"]
      },
      "minItems": 1,
      "maxItems": 5
    },
    "confidence": {
      "type": "number",
      "description": "Confidence score for this finding",
      "minimum": 0,
      "maximum": 1
    },
    "tool": {
      "type": "string",
      "enum": ["semgrep", "gitleaks", "orchestrator"],
      "description": "Which security tool generated this finding"
    },
    "severity": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "info"],
      "description": "CVSS-style severity classification"
    },
    "rule_id": {
      "type": "string",
      "description": "Identifier for the security rule (e.g., semgrep rule ID or gitleaks pattern)"
    },
    "remediation": {
      "type": "string",
      "description": "Suggested fix or remediation step"
    }
  },
  "required": ["finding", "evidence", "confidence", "tool", "severity"],
  "additionalProperties": false
}
